title: Porte
description: Porte séparant un espace chauffé de l'extérieur ou d'un local non chauffé.
type: object
properties:
  id:
    title: Identifiant unique de la porte
    type: string
    format: uuid
  paroi_opaque_id:
    title: Identifiant de la paroi opaque à laquelle la porte est associée.
    description: La paroi opaque peut être un mur, un plancher haut ou un plancher bas.
    type: [string, "null"]
    format: uuid
  description:
    title: Description de la porte
    type: string
  surface:
    title: Surface totale de la porte en m²
    type: number
    exclusiveMinimum: 0
  largeur_dormant:
    title: Largeur du dormant en mm
    type: number
    exclusiveMinimum: 0
  u_saisi:
    title: Coefficient de transmission surfacique de la porte connu et justifié en W/(m².K)
    type: number
    exclusiveMinimum: 0
  presence_joint:
    title: Présence d'un joint au niveau de la menuiserie
    type: boolean
  presence_retour_isolation:
    title: Présence d'un retour d'isolation au niveau de la menuiserie
    type: boolean
  mitoyennete:
    title: Mitoyenneté
    description: >
      Nature de l'espace sur lesquel donne la porte.

      Dans le cas d'une porte donnant sur un local non chauffé, la paroi opaque associée doit également donner 
      sur le même local non chauffé.
    type: integer
    oneOf:
      - title: Extérieur
        const: 1
      - title: Local non chauffé
        const: 6
      - title: Local tertiaire à l'intérieur de l'immeuble en contact avec l'appartement
        const: 7
      - title: Bâtiment ou local à usage autre que d'habitation
        const: 8
      - title: Local non déperditif (local à usage d'habitation chauffé)
        const: 9
      - title: Local non chauffé non accessible
        const: 10
  type_pose:
    title: Type de pose
    type: integer
    oneOf:
      - title: En tunnel
        const: 1
      - title: En applique intérieure
        const: 2
      - title: En applique extérieure
        const: 3
  nature_menuiserie:
    title: Nature de la menuiserie
    type: integer
    oneOf:
      - title: Porte simple en bois
        const: 1
      - title: Porte simple en PVC
        const: 2
      - title: Porte simple en métal
        const: 3
      - title: Toute menuiserie
        const: 4
  type:
    title: Type de porte
    type: integer
    oneOf:
      - title: Porte opaque pleine
        const: 1
      - title: Porte avec vitrage simple
        const: 2
      - title: Porte avec moins de 30% de vitrage simple
        const: 3
      - title: Porte avec 30-60% de vitrage simple
        const: 4
      - title: Porte avec double vitrage
        const: 5
      - title: Porte avec moins de 30% de double vitrage
        const: 6
      - title: Porte avec 30-60% de double vitrage
        const: 7
      - title: Porte isolée avec double vitrage
        const: 8
      - title: Porte opaque pleine isolée
        const: 9
      - title: Porte précédée d'un SAS
        const: 10
      - title: Autres types de porte
        const: 11
  u:
    title: Coefficient de transmission surfacique de la porte en W/(m².K)
    type: number
    exclusiveMinimum: 0
    readOnly: true
  b:
    title: Coefficient de réduction des déperditions thermiques
    type: number
    exclusiveMinimum: 0
    readOnly: true
  sdep:
    title: Surface déperditive en m²
    type: number
    exclusiveMinimum: 0
    readOnly: true
  dp:
    title: Déperditions thermiques en W/K
    type: number
    exclusiveMinimum: 0
    readOnly: true
  indicateur_performance:
    title: Indicateur de performance de la porte
    type: integer
    readOnly: true
    oneOf:
      - title: Très bonne
        const: 1
      - title: Bonne
        const: 2
      - title: Moyenne
        const: 3
      - title: Insuffisante
        const: 4
required:
  - id
  - description
  - surface
  - largeur_dormant
  - u_saisi
  - presence_joint
  - presence_retour_isolation
  - mitoyennete
  - type_pose
  - nature_menuiserie
  - type
  - u
  - b
  - sdep
  - dp
  - indicateur_performance
